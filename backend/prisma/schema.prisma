// Phase 6: Full Repo Understanding
model Repo {
  id         String   @id @default(uuid())
  projectId  String   @unique
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  rootPath   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  files      RepoFile[]
}

model RepoFile {
  id         String   @id @default(uuid())
  repoId     String
  repo       Repo     @relation(fields: [repoId], references: [id], onDelete: Cascade)
  path       String   // relative path
  ext        String
  size       Int
  mtime      DateTime
  contentHash String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  symbols    Symbol[]
  chunks     FileChunk[]

  @@index([repoId, path])
}

model Symbol {
  id         String   @id @default(uuid())
  repoId     String
  fileId     String
  file       RepoFile @relation(fields: [fileId], references: [id], onDelete: Cascade)
  name       String
  kind       String   // function, class, const, export
  startLine  Int
  endLine    Int
  signature  String?  // optional signature text
  createdAt  DateTime @default(now())
}

model FileChunk {
  id         String   @id @default(uuid())
  repoId     String
  fileId     String
  file       RepoFile @relation(fields: [fileId], references: [id], onDelete: Cascade)
  symbolId   String?  // optional
  startLine  Int
  endLine    Int
  text       String   @db.Text
  vectorId   String?  // vector DB id
  contentHash String
  createdAt  DateTime @default(now())
}

// Agent Allocation Hardening

// --- ZERO-HALLUCINATION SYSTEM ---

// Blockchain-like Truth Chain for immutable verification records
model TruthBlock {
  id              String   @id @default(uuid())
  index           Int      @unique // Block height in the chain
  previousHash    String   // Hash of the previous block
  hash            String   @unique // SHA-256 hash of this block
  nonce           Int      @default(0) // For proof-of-work (optional)
  timestamp       DateTime @default(now())
  
  // Block contents
  statements      VerifiedStatement[]
  
  @@index([hash])
  @@index([index])
}

// Individual verified statements stored in the Truth Chain
model VerifiedStatement {
  id              String     @id @default(uuid())
  blockId         String
  block           TruthBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)
  
  // Verification metadata
  agentId         String     // Agent who produced the output
  taskId          String?    // Related task (optional)
  
  // Content
  contentType     String     // "CODE" | "TEXT" | "JSON"
  content         String     @db.Text // The verified output
  contentHash     String     // SHA-256 of the content
  
  // Proof certificate
  proofHash       String     // Hash linking to proof details
  syntaxValid     Boolean    @default(false)
  sandboxValid    Boolean    @default(false)
  entropyValid    Boolean    @default(false)
  
  // Metrics
  entropyScore    Float?     // Information entropy of output
  complexityRatio Float?     // Output complexity / input complexity
  
  createdAt       DateTime   @default(now())
  
  @@index([agentId])
  @@index([taskId])
  @@index([contentHash])
}

// Log of hallucination detection attempts
model HallucinationCheck {
  id              String   @id @default(uuid())
  agentId         String
  taskId          String?
  
  // Input/Output
  inputHash       String   // Hash of the input context
  outputHash      String   // Hash of the agent output
  
  // Verification results
  passed          Boolean
  failureReason   String?  // "SYNTAX_ERROR" | "SANDBOX_FAIL" | "ENTROPY_VIOLATION"
  
  // Metrics
  syntaxCheckMs   Int?     // Time for syntax check
  sandboxCheckMs  Int?     // Time for sandbox execution
  entropyScore    Float?
  
  // If failed, the flagged output is stored for review
  flaggedOutput   String?  @db.Text
  
  createdAt       DateTime @default(now())
  
  @@index([agentId, passed])
  @@index([taskId])
}

